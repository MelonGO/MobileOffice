<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke">

    <android.support.v7.widget.Toolbar
        android:id="@+id/employee_input_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/DeepSkyBlue">

        <TextView
            android:id="@+id/employee_input_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center|left"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/employee_input_toolbar">

        <EditText
            android:id="@+id/employee_input_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:hint="员工姓名"
            android:textColorHint="@color/DeepSkyBlue" />
    </RelativeLayout>

    <Button
        android:id="@+id/employee_add_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/DeepSkyBlue"
        android:text="确认" />

</RelativeLayout>