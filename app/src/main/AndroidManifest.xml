<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.melon.mobileoffice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".message.MsgDetailActivity" />
        <activity android:name=".info.InfoDetailActivity" />
        <activity android:name=".contact.AddFriendActivity" />
        <activity android:name=".contact.FriendInfoActivity" />
        <activity android:name=".work.customer.CustomerActivity" />
        <activity android:name=".work.customer.CustomerInputActivity" />
        <activity android:name=".work.employee.EmployeeActivity" />
        <activity android:name=".work.employee.EmployeeInputActivity" />
        <activity android:name=".work.project.ProjectActivity" />
        <activity android:name=".work.project.ProjectInputActivity" />
    </application>

</manifest>